<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#398EAEBC">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="请输入想要查询的国家" />

    <View
        android:id="@+id/view_world"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/sv_world"
        app:layout_constraintEnd_toEndOf="@id/sv_world"
        app:layout_constraintStart_toStartOf="@id/sv_world"
        app:layout_constraintTop_toTopOf="@+id/sv_world" />

    <com.zyflool.coronatracker.util.DataDisplayView
        android:id="@+id/ddv_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_world" />


</androidx.constraintlayout.widget.ConstraintLayout>
